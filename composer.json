{
    "name": "eriksroth/wptails",
    "description": "wpTails is a WordPress theme development enviroment based on the TailwindCSS framework, with a modern gulp powered workflow.",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "wordpress",
        "tailwindcss",
        "gulp",
        "workflow",
        "starter",
        "theme",
        "development",
        "environment"
    ],
    "homepage": "https://github.com/ErikSRoth/wpTails",
    "authors": [
        {
            "name": "Erik Roth",
            "email": "eriksroth@gmail.com",
            "homepage": "https://github.com/ErikSRoth",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/ErikSRoth/wpTails/issues",
        "source": "https://github.com/ErikSRoth/wpTails"
    },
    "config": {
        "platform": {
          "php": "8.0"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
      },
    "scripts": {
        "lint:wpcs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs",
        "lint:php": "@php ./vendor/bin/parallel-lint --exclude .git --exclude vendor .",
        "make-pot": "wp i18n make-pot . languages/_s.pot",
        "install-codestandards": [
            "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
          ],
          "phpcbf-dev": "\"vendor/bin/phpcbf\"",
          "run-phpcbf": [
            "@phpcbf-dev"
          ],
          "phpcs-dev": "\"vendor/bin/phpcs\"",
          "run-phpcs": [
            "@phpcs-dev"
          ],
          "phpunit-dev": "\"vendor/bin/phpunit\"",
          "phpunit-integration-dev": "\"vendor/bin/phpunit\" -c \"phpunit.integration.xml.dist\""
    },
    "require-dev": {
        "php": ">=8.0",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "brain/monkey": "^2.6",
        "phpcompatibility/phpcompatibility-wp": "*",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "php-parallel-lint/php-console-highlighter": "^1.0"
    }
}
